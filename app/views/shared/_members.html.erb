<% if @members.empty? %>
  <h3>No members yet</h3>
<% else %>
  <h1>Listing Members</h1>

  <table>
    <thead>
      <tr>
        <th>Member ID</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Title</th>
        <th>Organization</th>
        <th>Summary</th>
        <th>Full text bio</th>
        <th>Url</th>
        <th>Picture</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @members.each do |member| %>
        <tr>
          <td><%= member.id %></td>
          <td><%= member.first_name %></td>
          <td><%= member.last_name %></td>
          <td><%= member.title %></td>
          <td><%= @organization.name %></td>
          <td><%= member.summary %></td>
          <td><%= member.full_text_bio %></td>
          <td><%= member.url %></td>
          <td><%= member.picture %></td>
          <td><%= link_to 'Show', organization_member_path(@organization, member) %></td>
          <td><%= link_to 'Edit', edit_organization_member_path(@organization, member) if current_user %></td>
          <td><%= link_to 'Destroy', organization_member_path(@organization, member), method: :delete, data: { confirm: 'Are you sure to delete this member?' } if current_user %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<br>

<%= link_to 'New Member', new_organization_member_path(@organization) if current_user %>